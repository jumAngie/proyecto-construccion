@model IEnumerable<Construccion.WEBUI.Models.UsuarioViewModelLista>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header" style="background-color:#ffbd26">
                    <div class="text-center">
                        <img src="~/Content/images/ACROPOLIS-LOGO.png" width="200" />
                        <h3 style="color:black"><strong>Listado de Usuarios</strong></h3>
                    </div>
                </div>
                <div class="card-body">
                    <a class="btn btn-primary" onclick="AbrirModalCrearUsuario()"> <i class="fa fa-plus-square"></i>Nuevo</a>
                    <div class="card-body">
                        <table class="table table-responsive table-report -mt-2" id="DataTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.user_Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.user_NombreUsuario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.role_Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Es_Admin)
                                    </th>
                                    <th>
                                        Editar
                                    </th>
                                    <th>
                                        Eliminar
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.user_Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.user_NombreUsuario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.role_Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Es_Admin)
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#EditarCargo" onclick=""><i class="fa fa-edit"></i> Editar</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#EditarCargo" onclick=""><i class="fa fa-trash"></i> Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_InsertUsuario" />

@section Scripts{
    <script src="~/js/Usuario/Usuarios.js"></script>
}

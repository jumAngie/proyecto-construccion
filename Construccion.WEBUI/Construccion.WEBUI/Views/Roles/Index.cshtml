@model IEnumerable<Construccion.API.Models.RolesViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet" />

<div class="card">
    <div class="card-header">
        <h5><span>Roles y permisos de acceso</span></h5>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 col-xl-6 xl-100">
                    <div class="card">
                        <div class="card-body">
                            <br />
                            <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalExample"><i class="fa fa-plus-square"></i>  Nuevo</a>
                            <br />
                            <ul class="nav nav-tabs border-tab" id="top-tab" role="tablist">
                                <li class="nav-item"><a class="nav-link active" id="top-home-tab" data-bs-toggle="tab" href="#top-home" role="tab" aria-controls="top-home" aria-selected="true"><i class="icofont icofont-ui-home"></i>Roles</a></li>
                            </ul>
                            <div class="tab-content" id="top-tabContent">
                                <div class="tab-pane fade show active" id="top-home" role="tabpanel" aria-labelledby="top-home-tab">
                                    <div class="content" id="listado">
                                        <div class="table table-responsive">
                                            <table class="display" id="TableRoles">
                                                <thead>
                                                    <tr>
                                                        <th>

                                                        </th>
                                                        <th>
                                                            Roles Id
                                                        </th>
                                                        <th>
                                                            Roles
                                                        </th>
                                                        <th>
                                                            Editar
                                                        </th>
                                                        <th>
                                                            Eliminar
                                                        </th>
